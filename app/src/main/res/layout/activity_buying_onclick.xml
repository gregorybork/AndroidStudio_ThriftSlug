<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyingOnclick">


    <TextView
        android:layout_width="251dp"
        android:layout_height="56dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="UCSC Hoodie"
        android:id="@+id/textviewDetailName"
        android:textColor="#68c1de"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewDetailItem"
            android:layout_width="250dp"
            android:layout_height="262dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/ucschoodie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:               "
                android:textColor="#262626"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textviewDetailType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jacket"
                android:textColor="#262626"
                android:textSize="20sp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:           "
                android:textColor="#262626"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textviewDetailGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jacket"
                android:textColor="#262626"
                android:textSize="20sp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size:                "
                android:textColor="#262626"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textviewDetailSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jacket"
                android:textColor="#262626"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand:             "
                android:textColor="#262626"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textviewDetailBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jacket"
                android:textColor="#262626"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color:              "
                android:textColor="#262626"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textviewDetailColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jacket"
                android:textColor="#262626"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condition:      "
                android:textColor="#262626"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textviewDetailCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jacket"
                android:textColor="#262626"
                android:textSize="20sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nPrice:              $"
                android:textColor="#262626"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textviewDetailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nJacket"
                android:textColor="#262626"
                android:textSize="20sp"></TextView>
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/buyNow"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="590dp"
        android:background="@drawable/save_button"
        android:text="Contact Seller"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>